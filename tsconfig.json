{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["src/data/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@pages/*": ["src/pages/*"],
      "@tests/*": ["src/tests/*"],
      "@fixtures/*": ["fixtures/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "playwright-report"]
}
